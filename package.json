{
  "name": "buriavimas",
  "version": "1.0.0",
  "description": "BurBuriuok is a Lithuanian-first learning companion that helps prepare for the Lithuanian Sailing Association skipper curriculum. User-facing copy will stay in Lithuanian, while source code, internal documentation, and developer discussions remain in English for clarity.",
  "type": "module",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "node tests/checkSupabaseConnection.mjs",
    "test:frontend": "npm run test --prefix frontend",
    "test:frontend:watch": "npm run test:watch --prefix frontend",
    "content:seed:curriculum": "node content/scripts/build_curriculum_seed_sql.mjs",
    "content:seed:generate": "node content/scripts/build_seed_sql.mjs",
    "content:seed:dependencies": "node content/scripts/build_dependency_seed_sql.mjs",
    "content:seed:check": "node content/scripts/build_seed_sql.mjs --check && node content/scripts/build_dependency_seed_sql.mjs --check",
    "backend:dev": "tsx watch backend/src/server.ts",
    "backend:start": "tsx backend/src/server.ts",
    "backend:typecheck": "tsc --project backend/tsconfig.json",
    "frontend:dev": "npm run dev --prefix frontend",
    "frontend:build": "npm run build --prefix frontend",
    "frontend:preview": "npm run preview --prefix frontend",
    "frontend:check": "npm run check --prefix frontend",
    "frontend:lint": "npm run lint --prefix frontend",
    "frontend:format": "npm run format --prefix frontend",
    "content:snapshot:refresh": "node tests/exportCurriculumTree.mjs --format csv --out docs/static_info/curriculum_in_supabase.csv",
    "content:snapshot:check": "npm run content:snapshot:refresh && git diff --exit-code docs/static_info/curriculum_in_supabase.csv",
    "content:markdown:validate": "node tests/validateConceptMarkdown.mjs",
    "prepare": "husky install",
    "test:supabase": "node tests/checkSupabaseConnection.mjs",
    "test:concepts": "ts-node --transpile-only tests/conceptsRepository.mapRow.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrolandas/BurBuriuok.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrolandas/BurBuriuok/issues"
  },
  "homepage": "https://mrolandas.github.io/BurBuriuok/",
  "dependencies": {
    "@supabase/supabase-js": "^2.43.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-html-parser": "^7.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "husky": "^8.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0"
  }
}
